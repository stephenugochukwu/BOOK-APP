    <!-- books -->
    <section id="books">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-sm-12">
                    <div class="section-title">
                        <h2>View books Available <small>Upgrade your skills with our books available</small></h2>
                    </div>

                    <div class="owl-carousel owl-theme owl-books">
                        <!--  start  -->
                        <% for (let element of record) {%>
                            <div class="col-md-4 col-sm-4">
                                <div class="item">
                                    <div class="books-thumb">
                                        <div class="books-top">
                                            <div class="books-image">
                                                <img src="<%=element.image%>" class="img-responsive" style="width:100%;height:200px;" alt="">
                                            </div>
                                            <div class="books-date">
                                                <span><i class="fa fa-calendar"></i> <%= (new Date(element.createdAt)).toString()%></span>
                                                <span><i class="fa fa-clock-o"></i> 7 Hours</span>
                                            </div>
                                        </div>

                                        <div class="books-detail">
                                            <h3>
                                                <a href="#">
                                                    <%=element.title%>
                                                </a>
                                            </h3>
                                            <p>
                                                <%=element.description%>
                                            </p>
                                        </div>

                                        <div class="books-info">
                                            <div class="books-author">
                                                <img src="/images/author-image1.jpg" class="img-responsive" alt="">
                                                <span><%=`${element.user.firstname}  ${element.user.lastname}`%></span>
                                                <span></p> Mobile No: <%=element.user.phonenumber%></span>
                                                <span></p> email: <%=element.user.email%></span>

                                            </div>
                                            <div class="books-price">
                                                <a href="#"><span>book Price:<%=`${element.price} NGN`%></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                                <!--  end  -->


                    </div>

                </div>
            </div>
